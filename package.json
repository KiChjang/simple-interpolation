{
  "name": "simple-interpolation",
  "version": "1.0.0",
  "description": "Simple Interpolation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "cover": "nyc mocha src/**/*.spec.ts --recursive -c -r ts-node/register -R spec",
    "build": "tsc -p tsconfig.json",
    "tslint": "tslint -c tslint.json src/**/*.ts",
    "test": "mocha src/**/*.spec.ts --recursive -c -r ts-node/register -R spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmytropadychak/simple-interpolation.git"
  },
  "author": {
    "name": "Dmytro Paduchak",
    "email": "dmytro.paduchak@gmail.com",
    "url": "https://github.com/dmytropadychak"
  },
  "keywords": [
    "simple",
    "typescript",
    "interpolate",
    "interpolation",
    "interpolating",
    "mathmathematics",
    "numeric"
  ],
  "bugs": {
    "url": "https://github.com/dmytropadychak/simple-interpolation/issues"
  },
  "homepage": "https://github.com/dmytropadychak/simple-interpolation#readme",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
